{
  "manifest_version": 3,
  "name": "Quick Copy Canvas",
  "version": "1.0",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "commands": {
    "toggle-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Toggle quick copy popup"
    }
  }
}